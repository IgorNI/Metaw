<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:paddingTop="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_post_time"/>
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="77dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:text="@string/post_time_1s"
        android:id="@+id/post_time_1s" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/post_time_10s"
        android:id="@+id/post_time_10s" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/post_time_60s"
        android:id="@+id/post_time_60s" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


</LinearLayout>
</LinearLayout>